<html>
    
    <head>

    </head>
<style>
    
    * { margin:0;}
    div.snow { position:absolute; background-size:100% 100%; background-image:url(data:image/png;base64,);}
    
    </style>
    
<body>
    
    
    <div id="body" style="position:relative; width:100%;height:100%;background-color:gray;" >
        
        
    
    </div>
    
    
    <script src="../jquery.js"></script>
    <script>
        
function random(min,max){
    return Math.floor(min+Math.random()*(max-min));
}
        

var body = document.getElementById("body");
var snowleft = 0 ,snowtop = 0;  
var snowOn = true;
var snowCount = 0;
var snowdelete = 1;
function createsnow(){

    for(snowleft=0;snowleft<body.clientWidth-40;){
    snow = document.createElement("div");
    snow.className = "snow";
    snow.style.top = random(0,10);
    snow.style.left = snowleft += snow.style.height = snow.style.width = random(5,20);
    snowleft+=30;
    snow.style.opacity=0;
if(random(1,9)==1){
    snowCount+=1;
    snow.id = "snow_"+snowCount;
    body.appendChild(snow);
        $(snow).animate({ opacity:1},1000);
        $(snow).animate({ top:parseInt(snow.style.top)+body.clientHeight+"px",left:parseInt(snow.style.left)-random(0,10)+"px"},30000,'linear');
        $(snow).animate({ opacity:0},1000);
        setTimeout(function(){body.removeChild(document.getElementById("snow_"+snowdelete));snowdelete++},30000);

}
    }

if(snowOn){setTimeout("createsnow();",1500);};
        
}
createsnow();



    </script>
    
    
    </body>
    
    
</html>